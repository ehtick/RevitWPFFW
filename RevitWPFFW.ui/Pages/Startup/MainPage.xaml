<views:MainPageBase x:Class="RevitWPFFW.ui.MainPage"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:views="clr-namespace:PB.MVVMToolkit.DialogServices;assembly=PB.MVVMToolkit"
                    xmlns:viewModels="clr-namespace:RevitWPFFW.core;assembly=RevitWPFFW.core"
                    xmlns:viewModels2="clr-namespace:RevitWPFFW.core;assembly=RevitWPFFW.core"

                    xmlns:ds="clr-namespace:PB.MVVMToolkit.DialogServices;assembly=PB.MVVMToolkit"
                    xmlns:local="clr-namespace:RevitWPFFW.ui"
                    mc:Ignorable="d" 
                    d:DesignHeight="500" d:DesignWidth="400">

    <!-- Resource Dictionary Reference-->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../App.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <ds:DialogService x:Key="DialogService"/>
            <viewModels:ViewModelLocator x:Key="ViewModelLocator" />


        </ResourceDictionary>
    </Page.Resources>

    <Page.DataContext>
        <Binding Path="MainPageViewModel"  Source="{StaticResource ViewModelLocator}"></Binding>
    </Page.DataContext>

    <views:MainPageBase.DialogService>
        <Binding Path="." Source="{StaticResource DialogService}"/>
    </views:MainPageBase.DialogService>



    <Border BorderBrush="{StaticResource BlueBorderBrush}"
            BorderThickness="3">

        <Border BorderBrush="{StaticResource MainBorderBrush}"
                BorderThickness="5">

                <!-- Primary Page Grid -->
                <Grid Background="{StaticResource MainBackgroundBrush}">

                    <!-- Break Page into Navigation and Bound Referenced Page -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Top Navigation Bar -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Column="0" Grid.Row="0" 
                        Command="{Binding Page1Command}"
                        Style="{StaticResource MainButton}">Page 1</Button>
                        <Button Grid.Column="1" Grid.Row="0" 
                        Command="{Binding Page2Command}"
                        Style="{StaticResource MainButton}">Page 2</Button>
                        <Button Grid.Column="2" Grid.Row="0" 
                        Command="{Binding Page3Command}"
                        Style="{StaticResource MainButton}">Page 3</Button>

                    </Grid>

                    <StackPanel Grid.Row="1">

                        <Button Name="EditComboList"
                                Width="100"
                                Height="30"
                                Margin="0,20,0,0"
                                Command="{Binding OpenDialogCustomCommand}"
                        >Edit Combo List</Button>

                        <Border Grid.Row="1">
                            <Frame x:Name="MainPageFrame"
                                   Content="{Binding CurrentPage, Converter={StaticResource MainPageConverter}}"
                                   NavigationUIVisibility="Hidden"
                            />
                        </Border>


                </StackPanel>



                </Grid>
        </Border>

    </Border>
</views:MainPageBase>
